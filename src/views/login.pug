extends layouts/main

block content
    article.login
        .page-info-and-form-container
            section.page-info
                h1.pageTitle Login
                p.description
                    |Welcome to WeTube!<br>
                    |You can log in with our site by filling out the form or using social login.
            .form-and-social-login
                form.form-container#jsForm(action=routes.login, method="post")
                    .input-container
                        h5.title.large Email
                        span.msg.hidden message
                        input.input(type="email", name="email", required)
                    .input-container
                        h5.title.large Password
                        span.msg.hidden message
                        input.input(type="password", name="password", required)
                    input(type="submit", value="Login")
                .divider
                    .line
                    span or
                    .line
                ul.social-login
                    li
                        a.github-login(href=routes.github)
                            i.fab.fa-github
                            span continue with Github
                    li
                        a.google-login(href="#")
                            i.fab.fa-google
                            span continue with Google
