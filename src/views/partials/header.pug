header.header
    .menu-btn-and-logo
        button.menu-btn
            i.fas.fa-bars
        a(href=routes.home).logo
            i.fab.fa-youtube
            span.title WeTube
    form.search-form(action=routes.search, method="get")
        i.fas.fa-search
        input(type="text", name="term", placeholder="Search...")
    ul.authentication
        if (!loggedUser)
            li
                a(href=routes.join) Join
            li
                a(href=routes.login) Login
        else
            li.loggedUser#jsLoggedUser
                span.name=loggedUser.name
                img(src=`/${loggedUser.avatarUrl}`)
                button.dropdown-btn
                    i.fas.fa-sort-down
                .dropdown.hidden
                    ul.content
                        li
                            a(href=routes.userDetail(loggedUser.id))
                                i.fas.fa-tv
                                span My Channel
                        li
                            a(href=`${routes.video}${routes.upload}`)
                                i.fas.fa-upload
                                span Upload Video
                        li
                            a(href=routes.editProfile(loggedUser.id))
                                i.fas.fa-user-edit
                                span Edit Profile
                        li
                            a(href=routes.logout)
                                i.fas.fa-sign-out-alt
                                span Log Out